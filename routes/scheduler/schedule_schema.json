{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "day_of_year": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^[0-9]{1,2}-[A-Z][a-z]{2}$"
          },
          "instructions": {
            "$ref": "#/definitions/instruction_array"
          }
        },
        "required": [
          "date",
          "instructions"
        ]
      }
    },
    "day_of_week": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "day": {
            "type": "string",
            "enum": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
              "Sunday"
            ]
          },
          "instructions": {
            "$ref": "#/definitions/instruction_array"
          }
        },
        "required": [
          "day",
          "instructions"
        ]
      }
    },
    "time_of_day": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}$"
          },
          "repeat": {
            "type": "integer",
            "minimum": 1
          },
          "between": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9]{2}:[0-9]{2}$"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "instructions": {
            "$ref": "#/definitions/instruction_array"
          }
        },
        "required": [
          "instructions"
        ],
        "anyOf": [
          {
            "required": [
              "time"
            ]
          },
          {
            "required": [
              "repeat",
              "between"
            ]
          }
        ]
      }
    }
  },
  "definitions": {
    "instruction_array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/instruction"
      }
    },
    "instruction": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": [
            "generate",
            "display",
            "devise_prompt",
            "sleep",
            "wait",
            "clear_history",
            "random_choice",
            "animate"
          ]
        },
        "prompt_var": {
          "type": "string"
        },
        "theme": {
          "type": "string"
        },
        "theme_var": {
          "type": "string"
        },
        "var": {
          "type": "string"
        },
        "mode": {
          "type": "string",
          "enum": [
            "next",
            "random"
          ]
        },
        "duration": {
          "type": "integer",
          "minimum": 1
        },
        "choices": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "action"
      ]
    }
  },
  "additionalProperties": false
}