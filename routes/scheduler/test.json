{
  "day_of_year": [
    {
      "date": "25-Dec",
      "instructions": [
        { "action": "display", "mode": "random" },
        { "action": "sleep", "duration": 180 }
      ]
    }
  ],
  "day_of_week": [
    {
      "day": "Friday",
      "instructions": [
        { "action": "devise_prompt", "theme": "twilight markets", "var": "friday_prompt" },
        { "action": "generate", "prompt_var": "friday_prompt" },
        { "action": "display", "mode": "next" }
      ]
    }
  ],
  "time_of_day": [
    {
      "time": "00:00",
      "instructions": [
        { "action": "clear_history" }
      ]
    },
    {
      "time": "08:00",
      "instructions": [
        {
          "action": "random_choice",
          "var": "values_theme",
          "choices": [
            "Action this day",
            "See through",
            "Change begins at home"
          ]
        },
        {
          "action": "devise_prompt",
          "theme_var": "values_theme",
          "var": "daily_prompt"
        }
      ]
    },
    {
      "repeat": 30,
      "between": ["08:00", "10:00"],
      "instructions": [
        { "action": "generate", "prompt_var": "daily_prompt" },
        { "action": "animate" },
        { "action": "display", "mode": "next" }
      ]
    },
    {
      "time": "12:00",
      "instructions": [
        { "action": "devise_prompt", "theme": "midday bustle", "var": "noon_prompt" }
      ]
    },
    {
      "repeat": 15,
      "between": ["12:00", "13:00"],
      "instructions": [
        { "action": "generate", "prompt_var": "noon_prompt" },
        { "action": "display", "mode": "random" }
      ]
    },
    {
      "time": "22:00",
      "instructions": [
        { "action": "sleep", "duration": 480 }
      ]
    }
  ]
}
