{% include "overlay_panel_common_head.html.j2" %}

<style>
  .overlay-panel.guidance {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 48px 56px;
    font-size: clamp(14px, 1.5vw, 18px);
    max-width: 40vw;
    min-width: 300px;
    text-align: center;
    flex-direction: column;
    gap: 24px;
  }

  .guidance-content {
    animation: fadeIn 1.6s ease 0.4s forwards;
    opacity: 0;
    line-height: 1.6;
  }

  .guidance-brand {
    animation: fadeIn 1.6s ease 0.2s forwards;
    opacity: 0;
    font-size: 0.9em;
    opacity: 0.7;
    margin-top: 16px;
  }
</style>

<div class="overlay-panel guidance">

  <!-- Main Content -->
  {% if TEXT %}
    <div class="guidance-content">
      {{ TEXT }}
    </div>
  {% endif %}

  <!-- Brand Footer -->
  <div class="guidance-brand">
    screen/machine
  </div>

  {% include "overlay_spinner.html.j2" %}
</div> 