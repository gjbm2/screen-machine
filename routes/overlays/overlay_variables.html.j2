{% include "overlay_panel_common_head.html.j2" %}

<div class="overlay-panel centered">

  <!-- Left Column -->
  <div style="width: 38%; display: flex; flex-direction: column; justify-content: space-between; animation: fadeInUp 1.6s ease 0.2s forwards; opacity: 0;">
    <div>
      <div style="font-weight: 400; font-size: 1.5em; margin-bottom: 8px;">
        screen/machine
      </div>
      <div style="opacity: 0.85; font-size: 1em;">
        For lazy artists.
      </div>
    </div>

    <div style="margin-top: auto;">
      <div style="font-style: italic; font-size: 1em; margin-top: 48px; margin-bottom: 10px;">
        Want more control?
      </div>
      <div style="width: 180px; border-radius: 12px; overflow: hidden;">
        <img src="{{ QR_BASE64 }}" style="display: block; width: 100%; height: auto; opacity: 0.8;" />
      </div>

      {% if SCREEN_NAME %}
        <div style="font-size: 0.8em; opacity: 0.6; margin-top: 18px;">
          This is <span style="font-weight: 400;">{{ SCREEN_NAME }}</span>.
        </div>
        <div style="font-size: 0.6em; opacity: 0.6; margin-top: 1em;">
          screen-machine@gregmarsh.co.uk
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Right Column -->
  <div style="width: 62%; display: flex; flex-direction: column; gap: 12px;">
    <div style="font-style: italic; font-size: 1em; animation: fadeInUp 1.6s ease 0.4s forwards; opacity: 0;">
      Current Exported Variables:
    </div>

    {% if EXPORTED_FRIENDLY_NAMES_WITH_VALUES %}
      <div style="margin-left: 24px; animation: fadeIn 1.6s ease 0.6s forwards; opacity: 0;">
        <table style="width: 100%; border-collapse: collapse;">
          <thead>
            <tr style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
              <th style="text-align: left; padding: 8px 4px; font-weight: 400; opacity: 0.8;">Variable</th>
              <th style="text-align: left; padding: 8px 4px; font-weight: 400; opacity: 0.8;">Value</th>
            </tr>
          </thead>
          <tbody>
            {% for var_name, var_info in EXPORTED_FRIENDLY_NAMES_WITH_VALUES.items() %}
              <tr style="border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                <td style="padding: 8px 4px; font-weight: 400;">
                  {% if var_info.friendly_name %}
                    {{ var_info.friendly_name }}
                  {% else %}
                    {{ var_name }}
                  {% endif %}
                </td>
                <td style="padding: 8px 4px; font-weight: 700;">{{ var_info.value | default('(not set)') }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <div style="margin-left: 24px; letter-spacing: -0.25px; animation: fadeIn 1.6s ease 0.6s forwards; opacity: 0; font-style: italic;">
        No variables are currently exported.
      </div>
    {% endif %}

    <div style="font-style: italic; font-size: 1em; margin-top: 24px; animation: fadeIn 1.6s ease 1.2s forwards; opacity: 0;">
      How to use variables:
    </div>
    <div style="margin-left: 24px; letter-spacing: -0.25px; animation: fadeIn 1.6s ease 1.4s forwards; opacity: 0;">
      <span style="font-weight: 400;">computer, use AI to</span> <span style="font-weight: 700;">set theme to cats</span>
    </div>
  </div>

  {% include "overlay_spinner.html.j2" %}
</div>
