{% include "overlay_panel_common_head.html.j2" %}

<div class="overlay-panel bottom-left">

  <!-- Prompt Section -->
  <div>
    <div style="font-weight: 600; margin-bottom: 8px;">Prompt</div>
    {% if PROMPT_TEXT %}
      <div>{{ PROMPT_TEXT }}</div>
    {% else %}
      <div style="color: #bbb;">None supplied</div>
    {% endif %}
  </div>

  <!-- Grid Section -->
 <div style="
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  column-gap: 24px;
  row-gap: 24px;
  align-items: start;
">

  <div>
    <div style="font-weight: 600; margin-bottom: 8px;">Workflow</div>
    <div style="overflow-wrap: break-word;">
      {{ WORKFLOW_TEXT or "—" }}
    </div>
  </div>

  <div>
    <div style="font-weight: 600; margin-bottom: 8px;">Seed</div>
    {{ SEED or "—" }}
  </div>

  <div>
    <div style="font-weight: 600; margin-bottom: 8px;">Took</div>
    {% if GENERATION_TIME_SECONDS %}
      {{ GENERATION_TIME_SECONDS | round(1) }}s
    {% else %}
      —
    {% endif %}
  </div>

  <div>
    <div style="font-weight: 600; margin-bottom: 8px;">Cost</div>
    {% if GENERATION_COST_GBP %}
      {{ (GENERATION_COST_GBP * 100) | round(1) }}p
    {% else %}
      —
    {% endif %}
  </div>
</div>


  {% include "overlay_spinner.html.j2" %}
</div>
